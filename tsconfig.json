{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",           // ← 大文字Bに修正
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["vite/client"]                 // ← 追加：import.meta.env の型を読み込む
  },
  "include": ["src", "src/vite-env.d.ts"]    // ← 追加：型定義ファイルを確実に含める
}
